<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img1_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@drawable/index_yes" />

            <TextView
                android:id="@+id/tv_text1_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img2_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@drawable/list_no" />

            <TextView
                android:id="@+id/tv_text2_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:text="列表" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img3_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@drawable/car_no" />

            <TextView
                android:id="@+id/tv_text3_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:text="购物车" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img4_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:src="@drawable/me_no" />

            <TextView
                android:id="@+id/tv_text4_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>